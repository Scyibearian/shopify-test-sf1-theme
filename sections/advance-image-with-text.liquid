{{ 'advance-image-with-text.css' | asset_url | stylesheet_tag }}
<style>
  @media (min-width:768px){
   .aiwt-main-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    } 
  }
  @media (max-width:767px){
   .aiwt-main-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_m }}px;
      padding-bottom: {{ section.settings.padding_bottom_m }}px;
    } 
  }
</style>

<div class="advance-image-with-text-main aiwt-main-{{ section.id }}">
  <div class="advance-image-with-text-main-child">
    <div class="custom-page-width">
      <div class="advance-image-with-text aiwt-layout-{{ section.settings.layout }}">
        <div class="aiwt-image">
          {% if section.settings.image != blank %}
            <img class="aiwt__image" src="{{ section.settings.image | image_url }}" width="auto" height="autp" alt="image-{{ section.id }}" loading="lazy" fetchpriority="high">
          {% else %}
            {%- capture placeholder_image -%}{% cycle 'placeholder': 'lifestyle-1', 'lifestyle-2' %}{%- endcapture -%}
            {{- placeholder_image | placeholder_svg_tag: 'placeholder' | replace: '<svg', '<svg preserveAspectRatio="xMinYMin slice"' -}}
          {% endif %}
        </div>
        <div class="aiwt-content">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'caption' %}
                <div class="aiwt-caption-block">
                  {{ block.settings.caption }}
                </div>
              {% when 'heading' %}
                <div class="aiwt-heading-block">
                  <h2>{{ block.settings.heading }}</h2>
                </div>
              {% when 'richtext' %}
                <div class="aiwt-richtext-block">
                  {{ block.settings.richtext }}
                </div>
              {% when 'subheading' %}
                <div class="aiwt-subheading-block">
                  {{ block.settings.subheading }}
                </div>
              {% when 'buttons' %}
                <div class="aiwt-buttons-block">
                  <a class="button aiwt--btn" href="{{ block.settings.btn_link }}">{{ block.settings.btn_name }}</a>
                </div>
              {% when 'icon_text' %}
                <div class="aiwt-icon_text_block">
                  {% if block.settings.icon != blank %}
                    <img src="{{ block.settings.icon | image_url }}" width="24px" height="24px" alt="icon">
                  {% endif %}
                  <span>{{ block.settings.text }}</span>
                </div>
              {% when 'icons' %}
                <div class="aiwt-icons-block">
                  {% for count in (1..5) %}
                    {% assign icon = 'icon_' | append:count %}
                    {% if block.settings[icon] != blank %}
                      <div class="aiwt-icon-item">
                        <img src="{{ block.settings[icon] | image_url }}" width="auto" height="auto" alt="icon">
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Advance Image with Text",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "layout",
        "label": "Image Position:",
        "options": [
          {
            "label": "First",
            "value": "first"
          },
          {
            "label": "Last",
            "value": "last"
          }
        ],
        "default":"first"
      },
      {
        "type": "header",
        "content": "Paddings"
      },
      {
        "type": "range",
        "id":"padding_top",
        "label": "Top",
        "min": 0,
        "max": 200,
        "step": 2,
        "default": 80,
        "unit": "px"
      },
      {
        "type": "range",
        "id":"padding_bottom",
        "label": "Bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "default": 80,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Paddings (Mobile)"
      },
      {
        "type": "range",
        "id":"padding_top_m",
        "label": "Top",
        "min": 0,
        "max": 200,
        "step": 2,
        "default": 40,
        "unit": "px"
      },
      {
        "type": "range",
        "id":"padding_bottom_m",
        "label": "Bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "default": 40,
        "unit": "px"
      }
    ],
    "blocks": [
      {
        "type": "caption",
        "name":"Caption",
        "settings": [
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          }
        ]
      },
      {
        "type": "heading",
        "name":"Heading",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      },
      {
        "type": "subheading",
        "name":"Sub-Heading",
        "settings": [
          {
            "type": "text",
            "id": "subheading",
            "label": "Sub-Heading"
          }
        ]
      },
      {
        "type": "richtext",
        "name":"RichText",
        "settings": [
          {
            "type": "richtext",
            "id": "richtext",
            "label": "Text"
          }
        ]
      },
      {
        "type": "buttons",
        "name":"Button",
        "settings": [
          {
            "type": "text",
            "id": "btn_name",
            "label": "Button Name"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button Link"
          }
        ]
      },
      {
        "type": "icon_text",
        "name":"Icon Text",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Text"
          }
        ]
      },
      {
        "type": "icons",
        "name":"Icons",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon_1",
            "label": "Icon 1"
          },
          {
            "type": "image_picker",
            "id": "icon_2",
            "label": "Icon 2"
          },
          {
            "type": "image_picker",
            "id": "icon_3",
            "label": "Icon 3"
          },
          {
            "type": "image_picker",
            "id": "icon_4",
            "label": "Icon 4"
          },
          {
            "type": "image_picker",
            "id": "icon_5",
            "label": "Icon 5"
          },
        ]
      }
    ],
    "presets": [
      {
        "name": "Advance Image with Text"
      }
    ]
  }
{% endschema %}